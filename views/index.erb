<!doctype html>
<html>
<head>
  <meta charset="utf-8">
</head>

<body>
  <h1> Public Directory </h1>
  <h2> Contents </h2>
  <ul>
    <% @files.each do |file| %>
      <a href="<%= file %>"><%= file %></a>
    <% end %>
  </ul>
  
  <p>
    <% if params[:sort] == "desc" %>
      <a href="/">Sort ascending</a>
    <% else %>
      <a href="/?sort=desc">Sort descending</a>
    <% end %>
  </p>
  
</body>
</html>